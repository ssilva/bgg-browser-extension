{
    "manifest_version": 3,

    "name": "Quick Board Game Rating",
    "version": "1.6.0",
    "description": "Quickly get the rating of a board game from BoardGameGeek.com.",
    "homepage_url": "https://github.com/ssilva/bgg-browser-extension",
    "author": "Saulo Silva",

    "icons": {
        "32": "meeple-16.png",
        "96": "meeple-48.png",
        "128": "meeple-128.png"
    },

    "options_ui": {
       "page": "options.html"
    },

    "action": { "default_popup": "popup.html" },

    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Search"
        }
    },

    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],

    "host_permissions": [
        "https://boardgamegeek.com/"
    ]
}
